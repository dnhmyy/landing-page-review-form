// Prisma schema for Roti Kebanggaan

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id         String   @id @default(cuid())
  name       String
  rating     Int
  comment    String

  branch     String?  // e.g. "Roti Kebanggaan Sorrento"
  photoUrl   String?  // uploaded photo path (optional)
  googleId   String?  @unique

  isApproved Boolean  @default(true)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([createdAt])
  @@index([rating])
  @@index([isApproved])
}
